import com.rameses.annotations.*
import com.rameses.common.*;
import com.rameses.services.extended.*

class ComisCertificationInterctor {
	@Env 
	def env;

    @Service('ComisCertificationService')
    def svc;

	@After(pattern="WorkflowTaskService.signal", eval="#{args[0].processname == 'certification'}")
	public void approveCertification(evt) {
        def res = evt.result;
        svc.approve([objid: res.refid]);
	}
}