<schema>
    <element tablename="permit">
        <field name="objid" primary="true" prefix="P" />
        <field name="appid" required="true" />
        <field name="paymentid" />
        <field name="permitno" caption="Permit No." searchable="true" />
        <field name="permitdate" caption="Permit Date" />
        <field name="permittype" />
        <field name="mayor_name" />
        <field name="mayor_title" />
        <field name="ordinanceno" />
        <field name="ordinancedate" type="date" />
        <complex name="app" ref="application" jointype="many-to-one"
            includefields="appno,dtapproved,apptype,appyear,applicant.name,deceased.name"
        >
            <key field="appid" target="objid" />
        </complex>
        <complex name="payment" ref="payment" jointype="many-to-one" required="false">
            <key field="paymentid" target="objid" />
        </complex>
    </element>
</schema>